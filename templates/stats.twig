                {% endif %}
            </td>
            <td>{{ book.authors }}</td>
            <td>{{ book.pages }}</td>
            <td>{{ book.date_read|format_date }}</td>
            <td>{{ book.score }}</td>
            <td>{{ book.score_type }}</td>
            </tr>
        {% endfor %}
        </tbody>
  </table>

  <h3>Shortest books read</h3>
  <table>
    <thead>
        <tr>
            <th>Title</th>
